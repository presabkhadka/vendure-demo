<mjml>
    <mj-head>
        <mj-title>
            Exclusive Promotion Just for You!
        </mj-title>
        <mj-style>
            body { font-family: Arial, sans-serif; padding: 20px; background-color: #f6f6f6; } .content {
            max-width: 600px; margin: 0 auto; background-color: #ffffff; padding: 20px; border: 1px solid
            #dddddd; border-radius: 5px; }
        </mj-style>
    </mj-head>
    <mj-body>
        <mj-section>
            <mj-column>
                <mj-text align='center' font-size='20px'>
                    <div class='content'>
                        <p>
                            Hello {{name}},
                        </p>
                        <p>
                            {{body}}
                        </p>
                        <p>
                            <strong>
                                Coupon Code:
                            </strong>
                            {{coupon_code}}
                        </p>
                        <p>
                            <strong>
                                Created At:
                            </strong>
                            {{created_at}}
                        </p>
                        <p>
                            <strong>
                                Ends At:
                            </strong>
                            {{ends_at}}
                        </p>
                        <p>
                            Don't miss out on this special offer. Use your coupon before it expires and enjoy
                            fantastic savings on your next purchase. Happy shopping!
                        </p>
                        <p>
                            Best regards,
                        </p>
                        <p>
                            {{appFullName}}
                        </p>
                    </div>
                </mj-text>
            </mj-column>
        </mj-section>
    </mj-body>
</mjml>
